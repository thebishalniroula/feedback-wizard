generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider     = "mysql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

model Question {
    id       String  @id @default(cuid())
    question String
    Form     Form?   @relation(fields: [formId], references: [id])
    formId   String?

    Answer Answer[]

    @@index([formId])
}

model Answer {
    id String @id @default(cuid())

    question   Question @relation(fields: [questionId], references: [id])
    questionId String

    answer       String
    Submission   Submission? @relation(fields: [submissionId], references: [id])
    submissionId String?

    @@index([questionId])
    @@index([submissionId])
}

model Form {
    id        String    @id @default(cuid())
    createdAt DateTime? @default(now())
    updatedAt DateTime? @updatedAt

    title       String
    description String?
    thumbnail   String?
    slug        String  @unique

    questions Question[]

    // owner       Company       @relation(fields: [companyId], references: [id])
    // companyId   String
    submissions Submission[]
    userId      String?

    @@index([userId, slug])
}

model Submission {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    form      Form     @relation(fields: [formId], references: [id])
    formId    String
    answers   Answer[]

    @@index([formId])
}

